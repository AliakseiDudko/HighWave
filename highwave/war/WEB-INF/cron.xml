<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
	<cron>
		<url>/cron/resetExchangeRateStats</url>
		<description>Reset current USD exchange rate and its daily delta.
		</description>
		<schedule>every day 09:00</schedule>
		<timezone>Europe/Minsk</timezone>
	</cron>
	<cron>
		<url>/cron/addExchangeRateTweet</url>
		<description>Add a new tweet with exchange rates information.
		</description>
		<schedule>every day 09:05</schedule>
		<timezone>Europe/Minsk</timezone>
	</cron>
	<cron>
		<url>/cron/addExchangeRateStatsTweet</url>
		<description>Add a new tweet with exchange rate statistic.
		</description>
		<schedule>every day 09:10</schedule>
		<timezone>Europe/Minsk</timezone>
	</cron>
	<cron>
		<url>/cron/addRussianRubleStatsTweet</url>
		<description>Add a new tweet with the records of the exchange rate of
			Russian ruble.
		</description>
		<schedule>every day 09:15</schedule>
		<timezone>Europe/Minsk</timezone>
	</cron>
	<cron>
	    <url>/cron/readNewsFeed</url>
	    <description>Read a twitter feed and reset a server copy of the feed.</description>
	    <schedule>every 5 minutes</schedule>
	    <timezone>Europe/Minsk</timezone>
	</cron>
</cronentries>